<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Change password
            </h1>
            <%- include('./partials/messages.ejs'); %>
            <form action="/users/security" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>
                <div class="form-group">
                    <label for="oldPassword">Old password</label>
                    <input type="oldPassword" id="oldPassword" name="oldPassword" class="form-control"
                        placeholder="Old Password" value="<%= typeof oldPassword != 'undefined' ? oldPassword : '' %>" />
                </div>
                <div class="form-group">
                    <label for="newPassword">New password</label>
                    <input type="newPassword" id="newPassword" name="newPassword" class="form-control"
                        placeholder="New Password"
                        value="<%= typeof newPassword != 'undefined' ? newPassword : '' %>" />
                </div>
                <div class="form-group">
                    <label for="newPassword2">Confirm new password</label>
                    <input type="newPassword2" id="newPassword2" name="newPassword2" class="form-control"
                        placeholder="Confirm new password"
                        value="<%= typeof newPassword2 != 'undefined' ? newPassword2 : '' %>" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">
                    Update password
                </button>
            </form>
        </div>
    </div>
</div>